<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="85dp"
    android:weightSum="1"        android:background="@drawable/corners"
    >


    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/titleTextView"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_weight="0.04"
        android:paddingTop="3dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="#fff"
        android:singleLine="true" />

    <View
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:id="@+id/line"
        android:background="#fff"
        android:layout_below="@+id/titleTextView"
        />

    <View
        android:id="@+id/verticalline"
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/titleTextView"
        android:background="#fff" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="MAC Address"
        android:id="@+id/macAddress"
        android:layout_below="@+id/titleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/titleTextView"
        android:layout_alignEnd="@+id/titleTextView"
        android:textAlignment="center"
        android:textOff="Disconnect"
        android:textOn="Connect"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/rssi_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/titleTextView"
        android:text="rssi"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:textAllCaps="false"
        android:textSize="36sp" />
</RelativeLayout>